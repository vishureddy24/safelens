{
  "name": "safelens-backend",
  "version": "1.0.0",
  "description": "Backend for SafeLens - AI-powered news verification platform",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf dist/ && tsc && cp -r src/public dist/ 2>/dev/null || :",
    "start": "node --experimental-specifier-resolution=node dist/index.js",
    "dev": "nodemon --experimental-specifier-resolution=node --exec ts-node src/index.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "finnhub": "^2.0.7",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-telegram-bot-api": "^0.64.0",
    "socket.io": "^4.7.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
